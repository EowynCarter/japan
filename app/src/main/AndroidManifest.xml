<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.churbain.japan">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.element.AjoutElementActivity" />
        <activity android:name=".activities.categories.DisplayCatActivity" />
        <activity android:name=".activities.categories.AjoutCategorieActivity" />
        <activity android:name=".activities.categories.ModifierCategorieActivity" />
        <activity android:name=".activities.categories.CategorieSelectActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.element.ModifierElementActivity"
            android:windowSoftInputMode="adjustPan"  />
    </application>

</manifest>